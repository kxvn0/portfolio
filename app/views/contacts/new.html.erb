<div class="contact-container">
    <h1>Contact Me</h1>
    <%= form_with model: @contact, url: contacts_path, local: true do |form| %>
        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
            <div class="error-message">
                <%= @contact.errors[:name].join(', ') if @contact.errors[:name].any? %>
            </div>
        </div>

        <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email, class: 'form-control' %>
            <div class="error-message">
                <%= @contact.errors[:email].join(', ') if @contact.errors[:email].any? %>
            </div>
        </div>

        <div class="form-group">
            <%= form.label :message %>
            <%= form.text_area :message, class: 'form-control' %>
            <div class="error-message">
                <%= @contact.errors[:message].join(', ') if @contact.errors[:message].any? %>
            </div>
        </div>

        <%= form.submit 'Send Message', class: 'btn btn-primary' %>
    <% end %>
</div>

